ip: 0.0.0.0
port: 8901
debug: true
workers: 2
# Use YAML's escape syntax \x1b instead of \033
log_format: "%(asctime)s.%(msecs)03d %(process)d \x1b[32m%(levelname)s:\x1b[0m [%(request_id)s|%(client_id)s] %(name)s %(message)s"
unicorn_log_format: "%(asctime)s.%(msecs)03d %(process)d \x1b[32m%(levelname)s:\x1b[0m [-|-] %(name)s %(message)s"

openstack:
  allow_write: false
  ca_cert: ./tls-ca-bundle.pem
  insecure: false

mcp_transport_security:
    token: supersecret
    enable_dns_rebinding_protection: false
    allowed_hosts:
      - "*:*"
    allowed_origins:
      - "http://*:*"
